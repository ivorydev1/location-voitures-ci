  <script>
    // Renseigne ici ton numéro WhatsApp au format international, sans le +
    const ORGANIZER_NUMBER = '2250700000000';

    function enc(s){return encodeURIComponent(s||'').replace(/%20/g,'+')}

    document.getElementById('form').addEventListener('submit', function(e){
      e.preventDefault();
      const prenom = document.getElementById('prenom').value.trim();
      const nom = document.getElementById('nom').value.trim();
      const tel = document.getElementById('tel').value.trim();
      const age = parseInt(document.getElementById('age').value,10);
      const ville = document.getElementById('ville').value.trim();
      const poste = document.getElementById('poste').value;
      const msg = document.getElementById('msg').value.trim();

      const errs=[];
      if(!prenom) errs.push('Le prénom est requis');
      if(!nom) errs.push('Le nom est requis');
      if(!tel) errs.push('Le numéro WhatsApp est requis');
      if(!(Number.isInteger(age) && age>=12)) errs.push('Âge minimum : 12 ans');
      if(errs.length){alert(errs.join('\n'));return;}

      const lines = [
        'Nouvelle inscription — Basketball Training Camp',
        `Nom: ${prenom} ${nom}`,
        `Âge: ${age}`,
        `Téléphone: ${tel}`,
        ville? `Ville: ${ville}` : '',
        poste? `Poste: ${poste}` : '',
        msg? `Message: ${msg}` : ''
      ].filter(Boolean).join('\n');

      const wa = `https://wa.me/${ORGANIZER_NUMBER}?text=${enc(lines)}`;
      window.location.href = wa;
    });
  </script>
